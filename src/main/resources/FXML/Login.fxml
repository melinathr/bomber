<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="pane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/Style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginMenu">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Login Menu" />
            <Text text="login if you have registered" />
            <TextField fx:id="username" maxWidth="100" promptText="your username" />
            <PasswordField fx:id="password" maxWidth="100" promptText="your password" />
         <HBox alignment="CENTER" prefHeight="21.0" prefWidth="600.0" spacing="10.0">
            <children>
                  <Button onMouseClicked="#checkInfo" text="login" />
                  <Button lineSpacing="50.0" onMouseClicked="#backToStart" text="back" />
            </children>
         </HBox>
        </VBox>
    </center>
</BorderPane>
