<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.GuestMenu"
            id="pane"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/Style.css">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Login Menu"/>
            <Text text="play as a guest"/>
            <TextField fx:id="username" promptText="your username" maxWidth="100"/>
            <Button text="login" onMouseClicked="#loginAsGuest"/>
            <Button text="back" onMouseClicked="#backToStart"/>
        </VBox>
    </center>
</BorderPane>
